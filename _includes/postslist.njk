<ol reversed class="grid{% if category and niepce.grid_tags %} {{ niepce.grid_tags }}{% else %} {{ niepce.grid }}{% endif%}">
{% if (home and niepce.grid === 'monocolumn') or (category and niepce.grid_tags === 'monocolumn') or (category and niepce.grid_tags === '' and niepce.grid === 'monocolumn') %}
{% set size = '100vw' %}
{% else %}
{% set size = '320px' %}
{% endif %}
{% for post in postslist | reverse %}
	{% set loading = "eager" if loop.index < 20 else "lazy" %}
	<li class="post">
		<a href="{{ post.url }}">
			{% if post.data.photo %}
			{% image "../content/"+post.url+"/"+post.data.photo , post.data.photo_alt, size, loading %}
			{% endif %}
			<h2 class="post-title">{{ post.data.title }}</h2>
			</a>
	</li>
{% endfor %}
</ol>
