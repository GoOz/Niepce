<ol reversed class="grid{% if not home and niepce.grid_tags %} {{ niepce.grid_tags }}{% else %} {{ niepce.grid }}{% endif%}">
{% for post in postslist | reverse %}
	<li class="post">
		<a href="{{ post.url }}">
			{% if post.data.photo %}
			{% image "../content/"+post.url+"/"+post.data.photo , post.data.photo_alt %}
			{% endif %}
			<h2 class="post-title">{{ post.data.title }}</h2>
			</a>
	</li>
{% endfor %}
</ol>
